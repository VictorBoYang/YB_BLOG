// @flow
import { isElement } from '@popperjs/core/lib/dom-utils/instanceOf';
import type { Window } from '@popperjs/core/lib/types';

export default function getDocumentElement(
  element: Element | Window
): HTMLElement {
  // $FlowFixMe: assume body is always available
  return (isElement(element) ? element.ownerDocument : element.document)
    .documentElement;
}
